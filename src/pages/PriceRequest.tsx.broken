      // Usar o pre√ßo sugerido como pre√ßo de venda do ARLA quando o produto for ARLA
      const arlaSale = formData.product === 'arla32_granel' ? suggestedPrice : 0;
      
      // Buscar taxa espec√≠fica do posto ou taxa padr√£o
