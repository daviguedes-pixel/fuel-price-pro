      // Calcular receita total (volume projetado * pre√ßo sugerido)
      const totalRevenue = volumeProjected * suggestedPrice;
      
      // Calcular custo total (volume projetado * custo final)
      const totalCost = volumeProjected * finalCost;
      
      // Lucro bruto
      const grossProfit = totalRevenue - totalCost;
      
      // Lucro por litro
      const profitPerLiter = volumeProjected > 0 ? grossProfit / volumeProjected : 0;
      
      // Compensa√ß√£o do ARLA (margem ARLA * volume)
      // Para S10: ARLA √© vendido junto, ent√£o calculamos a margem do ARLA
      // Volume do ARLA √© proporcional ao diesel (aprox. 5% do volume)
